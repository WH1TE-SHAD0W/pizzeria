{% extends "layout.html.j2" %}

{% block title %}Order History - Pizzeria{% endblock %}

{% block content %}
<div class="flex">
    <h1>Order History</h1>
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Created At</th>
                <th>Pizza</th>
            </tr>
        </thead>
        <tbody>
            {% for order_with_pizzas in orders_with_pizzas %}
            <tr>
                <td>{{ order_with_pizzas.order.order_id }}</td>
                <td>{{ order_with_pizzas.order.created_at }}</td>
                <td>
                    <ul>
                        {% for pizza in order_with_pizzas.pizzas %}
                        <li>{{ pizza.name }} - {{ pizza.size }} - ${{ pizza.price }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}