{% extends "layout.html.j2" %}

{% block title %}Create Order - Pizzeria{% endblock %}

{% block content %}
<h1>Create a New Order</h1>
<form action="/create-order-drink" method="post" class="space-y-4">
    <div class="flex flex-wrap space-x-4">
        <div class="drink-item flex items-center justify-between p-4 border border-gray-300 rounded-md shadow-sm hover:bg-gray-200 cursor-pointer">
            <span class="text-sm font-medium text-gray-700">Coke</span>
            <select name="coke_size" class="ml-4 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                <option value="small">Small</option>
                <option value="medium">Medium</option>
                <option value="large">Large</option>
            </select>
            <button type="button" class="ml-4 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm select-btn">
                Select
            </button>
        </div>
        <!-- Add more drink items as needed -->
    </div>

    <div class="flex justify-between mt-4">
        <button type="button" class="inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Add Drink
        </button>
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            Continue
        </button>
    </div>
</form>

<style>
    .drink-item:hover, .drink-item.selected {
        background-color: #e2e8f0; /* Tailwind's gray-200 */
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.select-btn').forEach(function(button) {
            button.addEventListener('click', function() {
                const drinkItem = button.closest('.drink-item');
                drinkItem.classList.toggle('selected');
            });
        });
    });
</script>
{% endblock %}